<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_About">



    <TextView
        android:id="@+id/ten"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Nguyễn Trọng Nghĩa"
        android:textSize="30dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/mssv"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="DH51904075"
        android:textSize="30dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/ten"
        />
    <TextView
        android:id="@+id/lop"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="D19_TH01"
        android:textSize="30dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/mssv"
        />
    <TextView
        android:id="@+id/phone"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:text="0931320161"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/lop"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        />
    <ImageView
        android:id="@+id/btn_goi"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toEndOf="@+id/phone"
        app:layout_constraintTop_toBottomOf="@+id/lop"
        android:src="@drawable/ic_call"
        />



</androidx.constraintlayout.widget.ConstraintLayout>